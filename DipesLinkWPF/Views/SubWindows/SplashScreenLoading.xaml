<Window
    x:Class="DipesLink.Views.SubWindows.SplashScreenLoading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="350"
    Height="120"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Background="WhiteSmoke">
        <Grid
            Height="40"
            VerticalAlignment="Top"
            Background="#00ABE6">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="White"
                Text="{DynamicResource ResourceKey=Starting}" />
        </Grid>

        <Grid Margin="0,35,0,0">
            <Image
                Grid.Row="1"
                Width="90"
                Height="90"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                gif:AnimationBehavior.AnimateInDesignMode="True"
                gif:AnimationBehavior.SourceUri="pack://application:,,,/DipesLink;component/Images/LoadingIcon.gif"
                Stretch="Uniform" />
        </Grid>
    </Grid>
</Window>
