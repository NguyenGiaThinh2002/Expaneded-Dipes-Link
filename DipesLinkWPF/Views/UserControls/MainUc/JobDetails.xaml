<UserControl
    x:Class="DipesLink.Views.UserControls.MainUc.JobDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:DipesLink.Views.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:gif="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="616"
    d:DesignWidth="1155"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DipesLink;component/Views/Resources/ResourceDictionary.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DipesLink;component/Views/Resources/DataGridResDict.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DipesLink;component/Views/Resources/TextBoxResDict.xaml" />
                <ResourceDictionary Source="pack://application:,,,/DipesLink;component/Views/Resources/ButtonResDict.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:FromEnumtoStringConverter x:Key="FromEnumtoStringConverter" />
            <converter:FormattedNumberConverter x:Key="FormatNumberConverter" />
            <converter:AddOne x:Key="AddOneConverter" />
            <converter:BooleanToVisibilityConverter x:Key="BolToVis" />
            <converter:TextToVisibilityConverter x:Key="TextToVis" />


            <Color x:Key="DataTagColorGraTop">AliceBlue</Color>
            <Color x:Key="DataTagColorGraMid">WhiteSmoke</Color>
            <Color x:Key="DataTagColorGraBot">White</Color>
        </ResourceDictionary>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="300" />
            <ColumnDefinition MaxWidth="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--#region LEFT-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Border
                Margin="3"
                BorderBrush="LightBlue"
                BorderThickness="1"
                CornerRadius="14 14 14 14"
                RenderOptions.EdgeMode="Unspecified"
                SnapsToDevicePixels="True" />
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="41" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Margin="3"
                    Background="#00ABE6"
                    CornerRadius="15 15 0 0"
                    SnapsToDevicePixels="True">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{DynamicResource ResourceKey=LINE_JOB}" />
                        <TextBlock
                            Margin="5,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding Index, Converter={StaticResource AddOneConverter}}" />
                    </StackPanel>

                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid ShowGridLines="False">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="60" />
                            <RowDefinition Height="70" />
                            <RowDefinition Height="70" />
                            <RowDefinition Height="70" />
                            <RowDefinition Height="70" />
                            <RowDefinition Height="70" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <!--  Job Name  -->
                        <Grid Background="Transparent" ShowGridLines="False">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="25" />
                                <RowDefinition MaxHeight="50" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="{DynamicResource ResourceKey=Job_Name}" />
                            <TextBox
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding Name, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                        </Grid>

                        <!--  Compare Type  -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.4*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid
                                Grid.Column="0"
                                Margin="0,0,15,0"
                                Background="Transparent"
                                ShowGridLines="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition MaxHeight="25" />
                                    <RowDefinition MaxHeight="50" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{DynamicResource ResourceKey=Job_Type}" />
                                <TextBox
                                    x:Name="TextBoxJobType"
                                    Grid.Row="1"
                                    Height="30"
                                    Margin="10,0,10,0"
                                    FontSize="16"
                                    IsReadOnly="True"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Text="{Binding JobType, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                            </Grid>

                            <!--  Process Type  -->
                            <Grid
                                Grid.ColumnSpan="2"
                                Margin="165,0,0,0"
                                Background="Transparent"
                                ShowGridLines="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition MaxHeight="25" />
                                    <RowDefinition MaxHeight="50" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{DynamicResource ResourceKey=Compare_Type}" />
                                <TextBox
                                    x:Name="TextBoxCompareType"
                                    Grid.Row="1"
                                    Height="30"
                                    Margin="0,7,10,8"
                                    FontSize="16"
                                    IsReadOnly="True"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Text="{Binding CompareType, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                            </Grid>
                        </Grid>



                        <!--  Totals or Static Text  -->
                        <Grid
                            Grid.Row="2"
                            Background="Transparent"
                            ShowGridLines="False"
                            Visibility="{Binding CompareType, Converter={StaticResource TextToVis}, ConverterParameter=StaticText}">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="20" />
                                <RowDefinition MaxHeight="40" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="Static Text" />
                            <TextBox
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding StaticText}" />
                        </Grid>
                        <Grid
                            Grid.Row="2"
                            Background="Transparent"
                            ShowGridLines="False"
                            Visibility="{Binding CompareType, Converter={StaticResource TextToVis}, ConverterParameter=Database}">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="25" />
                                <RowDefinition MaxHeight="40" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="{DynamicResource ResourceKey=Totals_Record_Database}" />
                            <TextBox
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding TotalRecDb, Converter={StaticResource FormatNumberConverter}}" />
                        </Grid>

                        <!--  Database compare format  -->
                        <Grid
                            Grid.Row="3"
                            Background="Transparent"
                            ShowGridLines="False"
                            Visibility="{Binding CompareType, Converter={StaticResource TextToVis}, ConverterParameter=Database}">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="25" />
                                <RowDefinition MaxHeight="40" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="{DynamicResource ResourceKey=POD_Format}" />
                            <TextBox
                                Grid.Row="1"
                                Width="125"
                                Height="30"
                                Margin="10,6,0,5"
                                HorizontalAlignment="Left"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding DataCompareFormat, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                            <TextBlock
                                Grid.ColumnSpan="2"
                                Margin="145,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="{DynamicResource ResourceKey=Complete_By}" />
                            <TextBox
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Width="145"
                                Height="30"
                                Margin="145,6,0,5"
                                HorizontalAlignment="Left"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding CompleteCondition, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                        </Grid>

                        <!--  Static Text  -->

                        <Grid
                            Grid.Row="4"
                            Background="Transparent"
                            ShowGridLines="False">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="20" />
                                <RowDefinition MaxHeight="40" />
                            </Grid.RowDefinitions>
                            <!--<TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="Static Text" />
                            <TextBox
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding StaticText}" />-->
                            <TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Normal"
                                Foreground="#00ABE6"
                                Text="{DynamicResource ResourceKey=Code_Data}" />
                            <TextBox
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding CurrentCodeData, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                        </Grid>


                        <!--  Database  -->
                        <Grid
                            Grid.Row="5"
                            Background="Transparent"
                            ShowGridLines="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="20" />
                                <RowDefinition MaxHeight="40" />
                            </Grid.RowDefinitions>
                            <!--<TextBlock
                            Margin="10,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="Database Path" />
                        <TextBox
                            Grid.Row="1"
                            Height="30"
                            Margin="10,0,10,0"
                            FontSize="16"
                            IsReadOnly="True"
                            Style="{StaticResource TextBoxStyle1}"
                            Text="{Binding DatabasePath}" />-->
                            <TextBlock
                                Grid.ColumnSpan="2"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Normal"
                                Foreground="#00ABE6"
                                Text="{DynamicResource ResourceKey=Time_(ms)}" />
                            <TextBox
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Height="30"
                                Margin="10,5,10,6"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding ProcessingTime, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                        </Grid>

                        <!--  Database compare format  -->
                        <Grid
                            Grid.Row="6"
                            Background="Transparent"
                            ShowGridLines="False">
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="20" />
                                <RowDefinition MaxHeight="40" />
                            </Grid.RowDefinitions>
                            <!--<TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Text="Printer Template" />
                            <TextBox
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding PrinterTemplate}" />-->
                            <TextBlock
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Normal"
                                Foreground="#00ABE6"
                                Text="{DynamicResource ResourceKey=Checked_Result}" />
                            <TextBox
                                x:Name="CheckResultColor"
                                Grid.Row="1"
                                Height="30"
                                Margin="10,0,10,0"
                                FontSize="16"
                                Foreground="{Binding CompareResultColor}"
                                IsReadOnly="True"
                                Style="{StaticResource TextBoxStyle1}"
                                Text="{Binding CompareResult, Converter={StaticResource FromEnumtoStringConverter}, ConverterParameter=0}" />
                        </Grid>

                    </Grid>
                </ScrollViewer>


            </Grid>
            <!--  thinh  -->
            <Grid
                Grid.Row="1"
                Margin="0,0,0,5"
                VerticalAlignment="Bottom"
                Background="AliceBlue"
                ShowGridLines="False">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button
                    x:Name="ButtonStart"
                    Grid.Column="0"
                    Width="85"
                    Height="75"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{Binding StartCommandJob}"
                    Content="{fa:Icon CirclePlay,
                                      Foreground=WhiteSmoke}"
                    FontSize="40"
                    IsEnabled="{Binding StatusStartButton}"
                    Style="{StaticResource ModernButton1}" />
                <Button
                    x:Name="ButtonPause"
                    Height="70"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{Binding DataContext.PauseCommandJob, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                    Content="{fa:Icon Pause,
                                      Foreground=WhiteSmoke}"
                    FontSize="30"
                    IsEnabled="{Binding StatusStopButton}"
                    Style="{StaticResource ModernButton1}"
                    Visibility="Collapsed" />
                <Button
                    x:Name="ButtonStop"
                    Grid.Column="1"
                    Width="85"
                    Height="75"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{Binding DataContext.StopCommandJob, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                    Content="{fa:Icon CircleStop,
                                      Foreground=WhiteSmoke}"
                    FontSize="40"
                    IsEnabled="{Binding StatusStopButton}"
                    Style="{StaticResource ModernButton1}" />
                <Button
                    x:Name="ButtonTrigger"
                    Grid.Column="2"
                    Width="85"
                    Height="75"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{Binding DataContext.TriggerCommandJob, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                    Content="{fa:Icon ArrowPointer,
                                      Foreground=WhiteSmoke}"
                    FontSize="40"
                    IsEnabled="{Binding StatusStopButton}"
                    Style="{StaticResource ModernButton1}" />

            </Grid>

        </Grid>
        <!--#endregion LEFT-->

        <!--#region MID-->
        <Grid Grid.Column="1">
            <Border
                Margin="3"
                BorderBrush="LightBlue"
                BorderThickness="1"
                CornerRadius="15 15 15 15"
                SnapsToDevicePixels="True">
                <Grid Background="Transparent" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Background="#00ABE6"
                        CornerRadius="14 14 0 0"
                        RenderOptions.EdgeMode="Aliased"
                        SnapsToDevicePixels="True">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{DynamicResource ResourceKey=VERIFICATION_INFO}" />
                    </Border>

                    <Grid
                        x:Name="GridChartInfo"
                        Grid.Row="1"
                        Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8*" />
                            <RowDefinition Height="300" />
                        </Grid.RowDefinitions>

                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                Margin="2"
                                Background="Gray"
                                BorderBrush="LightGray"
                                BorderThickness="0.6"
                                CornerRadius="5">
                                <Image Source="{Binding ImageResult}" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Margin="2"
                                Background="Transparent"
                                BorderBrush="LightBlue"
                                BorderThickness="0.6"
                                CornerRadius="5">
                                <lvc:PieChart
                                    InitialRotation="-90"
                                    MaxValue="100"
                                    MinValue="0"
                                    Series="{Binding CircleChart.Series}" />
                                <!--<TextBlock Text="{Binding PercentValue}" Height="20"></TextBlock>-->
                            </Border>
                        </Grid>


                        <Grid
                            Grid.Row="1"
                            Height="300"
                            Margin="1"
                            VerticalAlignment="Bottom"
                            Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>

                            <!--  IsEnabled="{Binding StatusStartButton}"  -->
                            <Border
                                Margin="2"
                                Background="#00ABE6"
                                BorderBrush="#00ABE6"
                                CornerRadius="15"
                                Cursor="Hand"
                                PreviewMouseDown="CheckedData_PreviewMouseDown"
                                SnapsToDevicePixels="True">
                                <!--<Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="5"
                                        Direction="320"
                                        Opacity="0.5"
                                        ShadowDepth="5"
                                        Color="#00ABE6" />
                                </Border.Effect>-->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="2*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        Foreground="White"
                                        Text="{DynamicResource ResourceKey=Total_Checked}" />
                                    <TextBlock
                                        x:Name="TextBlockTotalChecked"
                                        Grid.RowSpan="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="40"
                                        FontWeight="Normal"
                                        Foreground="White" />
                                    <!--  Text="{Binding TotalChecked, FallbackValue=0}"  -->
                                </Grid>

                            </Border>
                            <Border
                                Grid.Row="1"
                                Margin="2"
                                Background="#00C752"
                                CornerRadius="15"
                                SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="2*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        Foreground="White"
                                        Text="{DynamicResource ResourceKey=Passed}" />
                                    <TextBlock
                                        x:Name="TextBlockTotalPassed"
                                        Grid.RowSpan="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="40"
                                        FontWeight="Normal"
                                        Foreground="White" />
                                </Grid>
                            </Border>
                            <Border
                                Grid.Row="2"
                                Margin="2"
                                Background="#FF0000"
                                CornerRadius="15"
                                SnapsToDevicePixels="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="2*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        Foreground="White"
                                        Text="{DynamicResource ResourceKey=Failed}" />
                                    <TextBlock
                                        x:Name="TextBlockTotalFailed"
                                        Grid.RowSpan="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="40"
                                        FontWeight="Normal"
                                        Foreground="White" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <!--#endregion MID-->

        <!--#region RIGHT-->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*" MaxHeight="135" />
                <RowDefinition Height="5*" />
            </Grid.RowDefinitions>
            <!--  BorderBrush="#00ABE6"  -->
            <Border
                Margin="5,4,5,5"
                BorderThickness="1"
                CornerRadius="5">
                <Grid Margin="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <!--<RowDefinition Height="35" />-->
                    </Grid.RowDefinitions>
                    <Grid Background="AliceBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border
                            Margin="0,0,5,5"
                            BorderBrush="LightGray"
                            BorderThickness="1,1,0,0"
                            CornerRadius="5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0.0" Color="{StaticResource DataTagColorGraTop}" />
                                    <GradientStop Offset="0.5" Color="{StaticResource DataTagColorGraMid}" />
                                    <GradientStop Offset="1.0" Color="{StaticResource DataTagColorGraBot}" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="5"
                                    Direction="320"
                                    Opacity="0.5"
                                    ShadowDepth="5"
                                    Color="DimGray" />
                            </Border.Effect>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        FontSize="20"
                                        Text="{DynamicResource ResourceKey=Sent_Data}" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="Green"
                                        Text="{Binding CycleTimePOD, FallbackValue=15ms}" />
                                </StackPanel>

                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Normal"
                                    Text="{Binding SentDataNumber, Converter={StaticResource FormatNumberConverter}, FallbackValue=0}" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Column="1"
                            Margin="5,0,5,5"
                            BorderBrush="LightGray"
                            BorderThickness="1,1,0,0"
                            CornerRadius="5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0.0" Color="{StaticResource DataTagColorGraTop}" />
                                    <GradientStop Offset="0.5" Color="{StaticResource DataTagColorGraMid}" />
                                    <GradientStop Offset="1.0" Color="{StaticResource DataTagColorGraBot}" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="5"
                                    Direction="320"
                                    Opacity="0.5"
                                    ShadowDepth="5"
                                    Color="DimGray" />
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    FontSize="20"
                                    Text="{DynamicResource ResourceKey=Received_Data}" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Normal"
                                    Text="{Binding ReceivedDataNumber, Converter={StaticResource FormatNumberConverter}, FallbackValue=0}" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Column="2"
                            Margin="5,0,5,5"
                            BorderBrush="#00ABE6"
                            BorderThickness="1,1,0,0"
                            CornerRadius="5"
                            Cursor="Hand"
                            PreviewMouseDown="PrintedData_PreviewMouseDown">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0.0" Color="{StaticResource DataTagColorGraTop}" />
                                    <GradientStop Offset="0.5" Color="{StaticResource DataTagColorGraMid}" />
                                    <GradientStop Offset="1.0" Color="{StaticResource DataTagColorGraBot}" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="5"
                                    Direction="320"
                                    Opacity="0.5"
                                    ShadowDepth="5"
                                    Color="#00ABE6" />
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    FontSize="20"
                                    Text="{DynamicResource ResourceKey=Printed_Data}" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="30"
                                    FontWeight="Normal"
                                    Text="{Binding PrintedDataNumber, Converter={StaticResource FormatNumberConverter}, FallbackValue=0}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

            </Border>


            <Border
                Grid.Row="1"
                Margin="3"
                Padding="0,0,0,0"
                Background="Transparent"
                BorderBrush="LightBlue"
                BorderThickness="1"
                CornerRadius="17 17 16 16"
                RenderOptions.EdgeMode="Unspecified"
                SnapsToDevicePixels="True">
                <Grid
                    x:Name="Grid_DataDetail"
                    Background="Transparent"
                    ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" MaxHeight="40" />
                        <RowDefinition Height="10*" />
                    </Grid.RowDefinitions>
                    <Border
                        Background="#00ABE6"
                        CornerRadius="15 15 0 0"
                        SnapsToDevicePixels="True">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{DynamicResource ResourceKey=VERIFICATION_RESULT}" />
                            <Button
                                x:Name="ButtonSimulate"
                                Width="70"
                                Height="30"
                                Margin="10,0,0,0"
                                Command="{Binding SimulateCommandJob}"
                                Content="Simulate"
                                Style="{StaticResource ModernButtonDel}" />
                        </StackPanel>

                    </Border>

                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding RowHeightDatabaseTitle, FallbackValue=18}" />
                            <RowDefinition Height="{Binding RowHeightDatabase, FallbackValue=*}" />
                            <RowDefinition Height="18" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Height="30"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{DynamicResource ResourceKey=DatabaseInDetail}" />
                        <DataGrid
                            x:Name="DataGridDB"
                            Grid.Row="1"
                            Margin="20,15,20,20"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            Style="{DynamicResource DataGridStyle1}" />
                        <Image
                            x:Name="ImageLoadingDatabase"
                            Grid.Row="1"
                            Width="90"
                            Height="90"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            gif:AnimationBehavior.AnimateInDesignMode="True"
                            gif:AnimationBehavior.SourceUri="pack://application:,,,/DipesLink;component/Images/LoadingIcon.gif"
                            Stretch="Uniform"
                            Visibility="{Binding IsShowLoadingDB}" />

                        <!--  pack://application:,,,/Images/IsLoading.gif  -->
                        <TextBlock
                            Grid.Row="2"
                            Height="30"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Text="{DynamicResource ResourceKey=Job_Logs}" />
                        <DataGrid
                            x:Name="DataGridResult"
                            Grid.Row="3"
                            Margin="20,5,20,20"
                            CellStyle="{DynamicResource DataGridCellStyle1}"
                            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                            Style="{DynamicResource DataGridStyle1}" />

                        <Image
                            x:Name="ImageLoadingCheckedList"
                            Grid.Row="3"
                            Width="90"
                            Height="90"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            gif:AnimationBehavior.AnimateInDesignMode="True"
                            gif:AnimationBehavior.SourceUri="pack://application:,,,/DipesLink;component/Images/LoadingIcon.gif"
                            Stretch="Uniform"
                            Visibility="{Binding IsShowLoadingChecked}" />

                        <!--  IP Address  -->
                        <Grid
                            Grid.Row="4"
                            Margin="10,0,10,0"
                            Background="Transparent">
                            <StackPanel x:Name="StackPanelIPDisplay" Orientation="Horizontal">
                                <StackPanel.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14" />
                                    </Style>
                                </StackPanel.Resources>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <Image
                                        Width="18"
                                        Height="18"
                                        Source="/Images/ip-address.png" />
                                    <TextBlock
                                        x:Name="TextBlockPrinterIP"
                                        VerticalAlignment="Center"
                                        Text="######" />
                                    <TextBlock
                                        Width="75"
                                        VerticalAlignment="Center"
                                        Text="{DynamicResource ResourceKey=Printer_IP}" />
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <Image
                                        Width="18"
                                        Height="18"
                                        Source="/Images/ip-address.png" />
                                    <TextBlock
                                        x:Name="TextBlockCamIP"
                                        VerticalAlignment="Center"
                                        Text="######" />
                                    <TextBlock
                                        Width="75"
                                        VerticalAlignment="Center"
                                        Text="{DynamicResource ResourceKey=Camera_IP}" />
                                </StackPanel>
                                <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                                    <Image
                                        Width="18"
                                        Height="18"
                                        Source="/Images/ip-address.png" />
                                    <TextBlock
                                        x:Name="TextBlockControllerIP"
                                        VerticalAlignment="Center"
                                        Text="######" />
                                    <TextBlock
                                        Width="70"
                                        VerticalAlignment="Center"
                                        Text="{DynamicResource ResourceKey=Controller_IP}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>




                </Grid>
            </Border>
        </Grid>
        <!--#endregion RIGHT-->
    </Grid>
</UserControl>
